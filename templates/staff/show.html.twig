{% block title %}Staff{% endblock %}

{% block body %}
    <h1>Staff</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ staff.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ staff.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ staff.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ staff.address }}</td>
            </tr>
            <tr>
                <th>StaffPicture</th>
                <td>{{ staff.staffPicture }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ staff.phone }}</td>
            </tr>
            <tr>
                <th>Description</th>
