<body>
  {% block nav %}
  <a href="{{ path('app_register') }}">register</a>
  <a href="{{ path('app_login') }}">login</a>
  <a href="{{ path('app_logout') }}">logout</a>
  <a href="{{ path('customer_index') }}">customer list</a>
  <a href="{{ path('customer_show_user') }}">customer show</a>
  <a href="{{ path('staff_index') }}">staff list</a>
  <a href="{{ path('staff_show_user') }}">staff show</a>
