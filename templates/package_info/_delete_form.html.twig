<form method="post" action="{{ path('package_info_delete', {'id': package_info.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ package_info.id) }}">
    <button class="btn">Delete</button>
</form>
